<% layout('layouts/boilerPlate') -%>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h1>Create a new Listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <br><br>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listings[title]" placeholder="Enter title" class="form-control" required>
            <div class="valid-feedback">Title Looks Good!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea  name="listings[description]" placeholder="Enter description" cols="30" rows="10" class="form-control" required></textarea>
            <div class="valid-feedback">Description Looks amazing!</div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listings[image]" placeholder="Enter image URL/Link" class="form-control">
            
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listings[image]" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listings[price]" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">Please Enter a valid price!</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listings[location]" placeholder="Bangalore" class="form-control" required>
                <div class="valid-feedback">Beautiful place!</div>
            </div>
        </div>
        <div class="mb-3"> 
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listings[country]" placeholder="India" class="form-control" required>
            <div class="valid-feedback">Rich country!</div>
        </div>
        <button type="submit" class="btn add-btn btn-dark mt-3">Add</button>
        <br><br>
    </form>
    </div>
</div>
</body>