<% layout('layouts/boilerPlate') -%>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form action="/listings/<%= list._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <br><br>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listings[title]" value="<%= list.title %>" class="form-control" required>
                <div class="valid-feedback">Title Looks Good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea  name="listings[description]"  cols="30" rows="10" class="form-control" required><%= list.description %></textarea>
                <div class="valid-feedback">Description Looks amazing!</div>
            </div>
            <div class="mb-3">
                Original Listing Image:
                <img src="<%= originalImage %>" alt="OG image">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload a new Image </label>
                <input type="file" name="listings[image]" class="form-control">
                <div class="valid-feedback">Nice One!</div>
                <!-- <div class="invalid-feedback">Please Enter a valid Image Link!</div> -->
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listings[price]" value="<%= list.price %>" class="form-control" required>
                    <div class="invalid-feedback">Please Enter a valid price!</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listings[location]" value="<%= list.location %>" class="form-control" required>
                    <div class="valid-feedback">Beautiful place!</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listings[country]" value="<%= list.country %>" class="form-control" required>
                <div class="valid-feedback">Rich country!</div>
            </div>
            <button type="submit" class="btn btn-dark add-btn mt-3">Update</button>
            <br><br>
        </form>
</div>
</div>
</body>
</html>